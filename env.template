# WiFi Hotspot Payment Monitor Configuration Template
# Copy this file to .env.production and fill in your actual credentials

# Database Configuration
DB_HOST=your-database-host-here
DB_USER=your-database-username
DB_PASS=your-database-password
DB_NAME=your-database-name

# IOTEC Payment Gateway Configuration
IOTEC_CLIENT_ID=your-iotec-client-id
IOTEC_CLIENT_SECRET=your-iotec-client-secret
IOTEC_WALLET_ID=your-iotec-wallet-id
IOTEC_AUTH_URL=https://id.iotec.io
IOTEC_API_URL=https://pay.iotec.io/api

# Application Configuration
NODE_ENV=production
PORT=3000
POLL_INTERVAL=5000

# SMS Configuration
SMS_API_URL=https://billing.norismedia.com/api/send_voucher_sms.php

